{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useDefineForClassFields": false,
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true, // many toolchains not support decorators, convert decorators to native js code
  },
  "include": [
    "src/index.ts",
    "src/common/",
    "src/components/",
    "src/components3/",
  ],
}
